# Bet-That API Environment Configuration - JWT Authentication
# Copy to .env.api and customize for your environment

# Database Configuration
DB_PATH=storage/odds.db

# Basic API Settings
API_SECRET_KEY=your-api-secret-key-256-bits-minimum
ENVIRONMENT=development
LOG_LEVEL=INFO

# JWT Authentication Settings
# CRITICAL: Change these in production!
JWT_SECRET_KEY=your-jwt-secret-key-256-bits-minimum-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_ISSUER=bet-that-api
JWT_AUDIENCE=bet-that-users

# For RS256 algorithm (recommended for production)
# JWT_ALGORITHM=RS256
# JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_RSA_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_RSA_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"

# Password Security Settings
PASSWORD_BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# Authentication Rate Limiting
AUTH_MAX_ATTEMPTS_PER_IP=10
AUTH_MAX_ATTEMPTS_PER_USER=5
AUTH_RATE_LIMIT_WINDOW_MINUTES=15
AUTH_BLOCK_DURATION_MINUTES=60

# General Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Security Features
ENABLE_CSRF_PROTECTION=true
CSRF_TOKEN_EXPIRE_HOURS=24
ENABLE_EMAIL_VERIFICATION=true
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Session Management
MAX_CONCURRENT_SESSIONS=5
SESSION_TIMEOUT_MINUTES=1440

# Health Checks
ENABLE_DEEP_HEALTH=true
ENABLE_REQUEST_LOGGING=true

# Compliance
COMPLIANCE_DISCLAIMER="This platform provides sports analytics for entertainment purposes only. Not available to residents where prohibited. Users must be 21+. Gamble responsibly."

# Email Configuration (for verification and password reset)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true
# FROM_EMAIL=noreply@yourdomain.com
# FROM_NAME="Bet-That Platform"

# Redis Configuration (for production token blacklisting)
# REDIS_URL=redis://localhost:6379/0
# REDIS_TOKEN_BLACKLIST_DB=1
# REDIS_RATE_LIMIT_DB=2

# Security Headers
# SECURE_COOKIES=true
# COOKIE_SAMESITE=strict
# COOKIE_HTTPONLY=true

# Monitoring and Logging
# SENTRY_DSN=your-sentry-dsn-here
# LOG_TO_FILE=true
# LOG_FILE_PATH=logs/api.log
# LOG_ROTATION_SIZE=10MB
# LOG_RETENTION_DAYS=30

# Development Settings
# DEBUG=false
# RELOAD=false
# WORKERS=4
