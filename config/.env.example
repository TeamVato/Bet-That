# Production Odds API Configuration
# Multiple keys for key pool management and failover
ODDS_API_KEYS=key1,key2,key3,key4,key5

# API Client Settings
ODDS_SPORT_KEY=americanfootball_nfl
ODDS_REGION=us
ODDS_MARKETS=h2h,spreads,totals
ODDS_ODDS_FORMAT=american
ODDS_BOOKMAKERS=

# API Client Resilience Settings
ODDS_MAX_RETRIES=3
ODDS_BASE_TIMEOUT=15.0
ODDS_MAX_TIMEOUT=60.0

# Player Props (optional, consumes more quota)
ENABLE_PLAYER_PROPS=false

# CSV importer overrides (for development/fallback)
CSV_PATH=storage/imports/odds_snapshot.csv
CSV_BATCH_SIZE=1000
SQLITE_LOCK_RETRIES=10
SQLITE_LOCK_SLEEP=0.5

# Database Configuration
DATABASE_URL=sqlite:///storage/odds.db

# Stale odds threshold (minutes)
STALE_MINUTES=120

# Edge computation settings
SHRINK_TO_MARKET_WEIGHT=0.35
BUILD_DEFENSE_RATINGS_ON_DEMAND=1

# Data sources
SCHEDULE_CSV=tests/fixtures/schedule_2025_mini.csv
DEFAULT_SEASONS=2023,2024,2025

# Pipeline monitoring and observability
DEBUG_EDGE_JOINS=0
USE_DB_ADAPTER=0
